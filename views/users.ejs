<% include top %>
    <h2>人员信息</h2>
    <form method="post" id="useradd" action="">
	    <input type="text" name="name" id="name" class="form-contol" placeholder="姓名" />
	    <input type="text" name="email" id="email" class="form-contol" placeholder="email" />
	    <input type="text" name="phone" id="phone" class="form-contol" placeholder="手机" />
	    <input type="text" name="shortnum" id="shortnum" class="form-contol" placeholder="短号" />
	    <input type="submit" value="保存" />
	</form>
	<h2>人员列表</h2>
    <table class="bordered">
    	<thead>
    		<tr>
    			<th>姓名</th>
    			<th>email</th>
    			<th>手机</th>
    			<th>短号</th>
    			<th>操作</th>
    		</tr>
    	</thead>
    	<tbody>
    		<% for(var i=0; i<alluser.length; i++) {%>
    		<tr>
   				<td><%= alluser[i].name %></td>
   				<td><%= alluser[i].email %></td>
   				<td><%= alluser[i].phone %></td>
   				<td><%= alluser[i].shortnum %></td>
   				<td><a href=users/delete/<%= alluser[i]._id %>><button>删除</button></a></td>
			</tr>
			<% } %>
    	</tbody>
    </table>

<% include bottom %>